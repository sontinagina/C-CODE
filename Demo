#include <iostream>
using namespace std;
\\ reverse an array
int main() {
   int a;
   int arr[10]={4,5,6,7,9,12,55,65,7,8};
   cout<<arr[0]<<"\n";
   cin >>a;
   cout<<"Hello World! Aditi this side\n "<<a;
   cout<<"\n";
   int size=sizeof(arr)/sizeof(int);
   cout<<size<<"\n";
   for(int i=size-1;i>=0;i--){
       cout<<arr[i]<<" ";
   }
}




\\ find min and max elements in an array

#include <iostream>
#include <bits/stdc++.h>
using namespace std;
int main() {
   int a,b;
   int arr[10]={4,5,6,7,9,12,55,65,7,1};
   int min=arr[0];
   int max=arr[0];
   int size=sizeof(arr)/sizeof(int);
   for(int i=size-1;i>=0;i--){
   if(min>arr[i]){
   min=arr[i];
  }
  if(max<arr[i]){
  max=arr[i];
}
   }
   cout<<min<<" "<<max<< " \n";
   cout<<"min value = "<<*min_element(arr,arr+size)<<"\n max value ="<< *max_element(arr,arr+size);
}
